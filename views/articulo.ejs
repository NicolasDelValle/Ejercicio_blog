<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <!--Boostrap icons-->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css"
    />
    <title>Hello, world!</title>
  </head>
  <body class="bg-light">
    <!-- Navigation-->
    <%- include("partials/nav") %>
    <!-- Page Header-->
    <!--<header class="masthead" style="background-image: url('assets/home-bg.jpg')">
      <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
          <div class="col-md-10 col-lg-8 col-xl-7">
            <div class="site-heading">
              <h1>Clean Blog</h1>
              <span class="subheading">A Blog Theme by Start Bootstrap</span>
            </div>
          </div>
        </div>
      </div>
    </header>-->

    <!-- Main Content-->

    <section class="main">
      <div class="container text-center">
        <div class="row mt-4 justify-content-center">
          <div class="col-lg-4">
            <img
              src="<%- articulo.imagen %>"
              class="img-fluid rounded shadow-sm"
              alt="Imagen principal"
            />
          </div>
        </div>

        <h1 class="mt-4"><%- articulo.titulo %></h1>
        <p class="fst-italic">
          by:
          <a href=""> <%-articulo.user.firstname + " " + articulo.user.lastname %> </a>
        </p>

        <div class="row mt-4 justify-content-center">
          <div class="col-lg-10">
            <p><%- articulo.contenido %></p>
          </div>
        </div>
      </div>
    </section>

    <section id="comments-section" style="background-color: #e3f2fd" class="mt-5">
      <div class="container">
        <div class="row justify-content-center pb-5">
          <div class="col-lg-8 col-sm-12 mt-3 mb-3" id="comment-form">
            <form action="/articulo/<%= articulo.id %>" method="POST">
              <label for="comment" class="form-label m-0 mb-1 fw-bold">
                <%- user.firstname + " "+ user.lastname %></label
              >
              <input
                class="form-control"
                type="textarea"
                id="comment"
                name="comment"
                placeholder="Escriba su comentario"
              />

              <button
                class="btn mt-2 p-1 btn-primary text-uppercase"
                id="submitButton"
                type="submit"
              >
                Comentar
              </button>
            </form>
          </div>
          <% for ( const comment of articulo.comentarios ) {%>
          <div class="col-lg-8 col-sm-12 mt-3">
            <div class="bg-light rounded p-2 d-flex flex-column" id="comment-box-container">
              <div class="d-flex justify-content-between">
                <span class="fw-bold text-secondary"
                  ><%- comment.user.firstname + " "+ comment.user.lastname %></span
                >

                <a href="" data-bs-toggle="dropdown" aria-expanded="false">
                  <i class="bi bi-three-dots-vertical"></i>
                </a>
                <ul class="dropdown-menu">
                  <li>
                    <a class="dropdown-item ps-2" href="#"
                      ><i class="bi bi-trash fs-5 me-2"></i>Eliminar</a
                    >
                  </li>
                  <li>
                    <a class="dropdown-item ps-2" href="#"
                      ><i class="bi bi-pencil fs-5 me-2"></i>Editar</a
                    >
                  </li>
                </ul>
              </div>
              <%- comment.contenido %>
            </div>
          </div>
          <% } %>
        </div>
        <!--este-->
      </div>
    </section>

    <!-- Footer-->
    <%- include("partials/footer") %>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
