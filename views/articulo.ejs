    <!-- Main Content-->
    
    <section class="main">
      <div class="container text-center">

        <div class="row mt-4 justify-content-center">
            <div class="col-lg-4">
              <img src="<%- articulo.imagen %>" class="img-fluid rounded shadow-sm" alt="Imagen principal" />
            </div>
        </div>

        <h1 class="mt-4"><%- articulo.titulo %></h1>
        <p class="fst-italic">
            by
            <a href="">
                <%- articulo.user.nombre + " " + articulo.user.apellido %>
            </a>
        </p>

        

        <div class="row mt-4 justify-content-center">
          <div class="col-lg-10">
            <p><%- articulo.contenido %></p>
          </div>
        </div>
      </div>
    </section>

    <section id="comments-section" class="mt-5">
        <div class="container">
            <div class="row justify-content-center" style="background-color: #e3f2fd">
                <% for ( const comment of articulo.comentarios ) {%>
                <div class="col-lg-8 col-sm-12 mt-3">
                    <div class="bg-light rounded p-2" id="comment-box-container">
                        <p class="fw-bold"><%- comment.user.nombre %> </p>
                        <p class="fst-italic"><%- comment.user.email %></p>
                        <p><%- comment.contenido %></p>
                    </div>
                </div>
                <% } %>
                <div class= "col-lg-8 col-sm-12"id="comment-form">
                    <form action="/articulo/<%= articulo.id %>" method="POST">
                        <ul style="list-style:none">
                            <!-- <li>
                                <label for="nombre" class="form-label">Nombre</label>
                                <input type="text" id="nombre" name="nombre" class="form-control">
                            </li>
                            <li>
                                <label for="email" class="form-label">Email</label>
                                <input type="text" id="email" name="email" class="form-control">
                            </li> -->
                            <li>
                                <label for="comment" class="form-label">Comentario</label>
                                <input class="form-control" type="textarea" id="comment" name="comment" placeholder="Escriba su comentario">
                            </li>
                        </ul>
                        <button class="btn btn-primary text-uppercase" id="submitButton" type="submit">
                          Comentar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
