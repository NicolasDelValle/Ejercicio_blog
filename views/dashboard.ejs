<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <!-- Bootstrap ICONS-->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css"
    />
    <title>Admin</title>
  </head>
  <body class="bg-light">
    <!-- Navigation-->
    <%- include("partials/nav") %>
    <!-- Page Header-->
    <header class="masthead p-3 border-bottom">
      <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5">
          <div
            class="col-md-10 col-lg-8 col-xl-7 d-flex justify-content-between align-items-center"
          >
            <div class="site-heading">
              <h1>Clean Blog</h1>
              <span class="subheading">A Blog Theme by Start Bootstrap</span>
            </div>
            <div>
              <a
                class="btn btn-primary text-uppercase"
                id="submitButton"
                href="/<%- role %>/crear-articulo"
              >
                Crear Artículo
              </a>
            </div>
          </div>
        </div>
      </div>
    </header>
    <!-- Main Content-->
    <div class="container px-4 px-lg-5">
      <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
          <!-- Post preview-->
          <% for(const articulo of articles) {%>
          <div class="post-preview m-3 p-2 border border-3 rounded">
            <a
              class="btn btn-primary"
              href="/<%- role %>/editar-articulo/<%- articulo.id %>"
              role="button"
              >EDITAR <i class="bi bi-pencil-square"></i
            ></a>
            <button
              type="button"
              class="btn btn-outline-danger"
              data-bs-toggle="modal"
              data-bs-target="#exampleModal"
            >
              <i class="bi bi-trash3"></i>
            </button>
            <!--MODAL-->
            <div
              class="modal fade"
              id="exampleModal"
              tabindex="-1"
              aria-labelledby="exampleModalLabel"
              aria-hidden="true"
            >
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">
                      ¿Esta seguro de eliminar el articulo?
                    </h5>
                    <button
                      type="button"
                      class="btn-close"
                      data-bs-dismiss="modal"
                      aria-label="Close"
                    ></button>
                  </div>
                  <div class="modal-body">
                    Se eliminara el articulo
                    <span class="bg-secondary bg-opacity-50 px-2 text-dark rounded-pill"
                      ><%- articulo.titulo %></span
                    >
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                      Cancelar
                    </button>
                    <a
                      class="btn btn-danger"
                      href="/<%- role %>/eliminar/<%- articulo.id %> "
                      role="button"
                      >Borrar</a
                    >
                  </div>
                </div>
              </div>
            </div>
            <div class="d-flex align-items-center mt-2 p-2 border border-1">
              <img class="h-100" src="<%- articulo.imagen %> " alt="Imagen de articulo" />
              <div class="p-2">
                <h2 class="text-dark m-0 p-0"><%- articulo.titulo %></h2>
                <p
                  class="overflow-hidden w-10 text-secondary m-0 p-0 fs-6"
                  style="max-height: 75px"
                >
                  <%- articulo.contenido %>
                </p>
              </div>
            </div>
          </div>
          <hr class="my-4" />
          <% } %>
          <!-- Divider-->
          <!-- Post preview-->
        </div>
      </div>
    </div>
    <!-- Footer-->
    <%- include("partials/footer") %>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
